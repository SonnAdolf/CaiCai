<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_main8"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/teemo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/radio_btn"
        android:layout_marginRight="22dp"
        android:padding="0dp"
        android:background="@drawable/teemo" />
    <TextView
        android:id="@+id/radio_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/teemo"
        android:layout_alignLeft="@+id/movie_btn"
        android:layout_alignTop="@+id/radio_btn"
        android:text="【时光电台、每天23点，准时更新九首歌。希望优美的音符化作涓涓溪流，洗去你的烦恼。时光流逝，一切都在变，唯有我们的友谊天长地久，每一天每一小时每一秒。】" />

    <TextView
        android:id="@+id/main_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radio_btn"
        android:layout_alignParentTop="true"
        android:textSize="17sp"
        android:text="蔡蔡，快乐每一天！(^_^)∠※" />

    <ImageButton
        android:id="@+id/radio_btn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/movie_btn"
        android:layout_toLeftOf="@+id/teemo"
        android:padding="0dp"
        android:background="@drawable/guitar" />

    <TextView
        android:id="@+id/movie_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/movie_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/radio_btn"
        android:layout_alignTop="@+id/movie_btn"
        android:text="【绿叶影院，不定期更新一部经典优秀高品质的电影。无聊的时候可以看看哦。会多选取一些温馨而又清新的喜剧。重温那些刻录在胶卷中的美好时光。】" />

    <TextView
        android:id="@+id/teemo_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radio_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radio_btn"
        android:layout_alignTop="@+id/teemo"
        android:text="【提莫小站，我种下一路蘑菇，只为让你找到回家的路。这里会不定期更新英雄联盟有关的视频，会有蔡蔡2312这个id出现。(^_^)】" />

    <ImageButton
        android:id="@+id/movie_btn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/teemo"
        android:layout_below="@+id/main_words"
        android:layout_marginTop="54dp"
        android:padding="0dp"
        android:background="@drawable/moviebtn_img" />

</RelativeLayout>